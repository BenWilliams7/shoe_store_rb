<div class="row">
  <div class="col-md-6">
    <h3>View your stores</h3>
    <h4><%= @store_message %></h4>
    <ul>
      <% Store.all.each do |store| %>
        <h5><a href="/edit_store/<%= store.id %>"><%= store.name %></a></h5>
      <% end %>
    </ul>
  </div>
  <div class="col-md-6">
    <h3>Add a New Store</h3>
    <br>
    <div>
      <form class="form-group" action="/stores" method="post">
        <label for="store-name">Store Name</label>
        <input class="form-control" type="text" name="store-name">
        <br>

        <button type="submit" class="btn btn-success">Add Store</button>
      </form>
    </div>
  </div>
</div>
